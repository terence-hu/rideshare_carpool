<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Carpool group #<%= @carpool_group.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/carpool_groups" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link carpool_group start -->
      <div class="col">
        <a href="/carpool_groups/<%= @carpool_group.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit carpool group
        </a>
      </div>
      <!-- Edit link carpool_group end -->

      <!-- Delete link carpool_group start -->
      <div class="col">
        <a href="/delete_carpool_group/<%= @carpool_group.id %>" class="btn btn-block btn-outline-secondary">
          Delete carpool group
        </a>
      </div>
      <!-- Delete link carpool_group end -->
    </div>

    <dl>
      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@carpool_group.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@carpool_group.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

