<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All carpool groups
    </h1>

    <a href="/carpool_groups/new" class="btn btn-block btn-outline-secondary">
      Add a new carpool group
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "carpool_group_templates/carpool_groups_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @carpool_groups.each do |carpool_group| %>
      <tr>
        <td>
          <%= carpool_group.id %>
        </td>

        <td>
          <%= time_ago_in_words(carpool_group.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(carpool_group.updated_at) %> ago
        </td>

        <td>
          <a href="/carpool_groups/<%= carpool_group.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @carpool_groups, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
