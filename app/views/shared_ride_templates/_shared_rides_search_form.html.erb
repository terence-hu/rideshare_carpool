  </script>

  <div class="form-group">
    <%= f.label :created_at, "CarpoolGroup Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='carpool_groupgteqcreated_atPicker' data-target-input="nearest">
