            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='preferred_triplteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :preferred_trip_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "PreferredTrip Created at less than or equal to", :data => {:target => '#preferred_triplteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#preferred_triplteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
