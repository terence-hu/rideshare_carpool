<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All shared rides
    </h1>

    <a href="/shared_rides/new" class="btn btn-block btn-outline-secondary">
      Add a new shared ride
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "shared_ride_templates/shared_rides_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Preferred trip
        </th>

        <th>
          Carpool group
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @shared_rides.each do |shared_ride| %>
      <tr>
        <!-- Display shared_ride.id start -->
        <td>
          <%= shared_ride.id %>
        </td>
        <!-- Display shared_ride.id end -->

        <!-- Display shared_ride.user_id start -->
        <td>
          <% if shared_ride.user.present? %>
            <a href="/users/<%= shared_ride.user.id %>">
              <%= shared_ride.user.email %>
            </a>
          <% end %>
        </td>
        <!-- Display shared_ride.user_id end -->

        <!-- Display shared_ride.preferred_trip_id start -->
        <td>
          <% if shared_ride.preferred_trip.present? %>
            <a href="/preferred_trips/<%= shared_ride.preferred_trip.id %>">
              <%= shared_ride.preferred_trip.created_at %>
            </a>
          <% end %>
        </td>
        <!-- Display shared_ride.preferred_trip_id end -->

        <!-- Display shared_ride.carpool_group_id start -->
        <td>
          <% if shared_ride.carpool_group.present? %>
            <a href="/carpool_groups/<%= shared_ride.carpool_group.id %>">
              <%= shared_ride.carpool_group.created_at %>
            </a>
          <% end %>
        </td>
        <!-- Display shared_ride.carpool_group_id end -->

        <!-- Display shared_ride.created_at start -->
        <td>
          <%= time_ago_in_words(shared_ride.created_at) %> ago
        </td>
        <!-- Display shared_ride.created_at end -->

        <!-- Display shared_ride.updated_at start -->
        <td>
          <%= time_ago_in_words(shared_ride.updated_at) %> ago
        </td>
        <!-- Display shared_ride.updated_at end -->

        <td>
          <a href="/shared_rides/<%= shared_ride.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @shared_rides, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
