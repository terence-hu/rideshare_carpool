<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Shared Rides

    <a data-toggle="collapse" href="#preferred_trip_shared_rides_new_form">
      Add shared ride
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @preferred_trip.shared_rides.each do |shared_ride| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/shared_rides/<%= shared_ride.id %>">
          <%= shared_ride.user_id %>
        </a>

        <%if current_user == shared_ride.user %>
          <a href="/delete_shared_ride_from_preferred_trip/<%= shared_ride.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="preferred_trip_shared_rides_new_form">
        <%= render partial: "preferred_trip_templates/preferred_trip_shared_rides_new_form" %>
      </div>
    </div>

  </ul>
</div>
