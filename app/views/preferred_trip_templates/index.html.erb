<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All preferred trips
    </h1>

    <a href="/preferred_trips/new" class="btn btn-block btn-outline-secondary">
      Add a new preferred trip
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->
<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "preferred_trip_templates/all_photos_map" %>
  </div>
</div>
<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Origin
        </th>

        <th>
          Destination
        </th>

        <th>
          Earliest departure time
        </th>

        <th>
          Latest departure time
        </th>

        <th>
          Date
        </th>

        <th>
          Max radius
        </th>

        <th>
          User
        </th>

        <th>
          Join
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @preferred_trips.each do |preferred_trip| %>
      <tr>
        <!-- Display preferred_trip.id start -->
        <td>
          <%= preferred_trip.id %>
        </td>
        <!-- Display preferred_trip.id end -->

        <!-- Display preferred_trip.origin start -->
        <td>
          <%= preferred_trip.origin %>
        </td>
        <!-- Display preferred_trip.origin end -->

        <!-- Display preferred_trip.destination start -->
        <td>
          <%= preferred_trip.destination %>
        </td>
        <!-- Display preferred_trip.destination end -->

        <!-- Display preferred_trip.earliest_departure_time start -->
        <td>
          <%= preferred_trip.earliest_departure_time %>
        </td>
        <!-- Display preferred_trip.earliest_departure_time end -->

        <!-- Display preferred_trip.latest_departure_time start -->
        <td>
          <%= preferred_trip.latest_departure_time %>
        </td>
        <!-- Display preferred_trip.latest_departure_time end -->

        <!-- Display preferred_trip.date start -->
        <td>
          <%= preferred_trip.date %>
        </td>
        <!-- Display preferred_trip.date end -->

        <!-- Display preferred_trip.max_radius start -->
        <td>
          <%= preferred_trip.max_radius %>
        </td>
        <!-- Display preferred_trip.max_radius end -->

        <!-- Display preferred_trip.user_id start -->
        <td>
          <% if preferred_trip.user.present? %>
            <a href="/users/<%= preferred_trip.user.id %>">
              <%= preferred_trip.user.email %>
            </a>
          <% end %>
        </td>
        <!-- Display preferred_trip.user_id end -->

        <!-- Display preferred_trip.join start -->
        <td>
          <%= preferred_trip.join %>
        </td>
        <!-- Display preferred_trip.join end -->

        <!-- Display preferred_trip.created_at start -->
        <td>
          <%= time_ago_in_words(preferred_trip.created_at) %> ago
        </td>
        <!-- Display preferred_trip.created_at end -->

        <!-- Display preferred_trip.updated_at start -->
        <td>
          <%= time_ago_in_words(preferred_trip.updated_at) %> ago
        </td>
        <!-- Display preferred_trip.updated_at end -->

        <td>
          <a href="/preferred_trips/<%= preferred_trip.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @preferred_trips, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
